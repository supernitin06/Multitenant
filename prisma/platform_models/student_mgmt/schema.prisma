model Student {
  id               String         @id @default(uuid())
  studentId        String?        // Unique ID within the institution (e.g. Roll No)
  firstName        String
  lastName         String
  profileImage     String?
  email            String?
  phone            String?
  gender           String?
  dateOfBirth      DateTime?
  classId          String?
  sectionId        String?
  address          String?
  parentName       String?
  parentPhone      String?
  isActive         Boolean        @default(true)
  createdAt        DateTime       @default(now())
  updatedAt        DateTime       @updatedAt

  tenantId         String
  tenant           Tenant         @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  
  @@map("students")
  @@unique([tenantId, studentId])
}
